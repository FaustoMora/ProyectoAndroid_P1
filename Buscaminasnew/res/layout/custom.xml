<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/dificultad">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        

        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/rows"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colums"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/colums"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mines"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/darker_gray" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rows"
        android:layout_alignBottom="@+id/rows"
        android:layout_alignRight="@+id/textView3"
        android:text="Filas"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colums"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/startCustom"
        android:text="N. minas"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/rows"
        android:text="Columnas"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/mines"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginRight="58dp"
        android:ems="10"
        android:textStyle="bold"
        
        android:inputType="number"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/startCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mines"
        android:layout_below="@+id/mines"
        android:layout_marginTop="28dp"
        android:text="Iniciar Juego"
        android:textSize="20dp"
        android:background="@drawable/button" />

</RelativeLayout>