<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/portada">

    <Button
        android:id="@+id/beginnerButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/normalButton"
        android:layout_alignLeft="@+id/normalButton"
        android:layout_marginBottom="35dp"
        android:background="@drawable/button"
        android:text="Principiante"
        android:textSize="40dp" />

    <Button
        android:id="@+id/normalButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/advancedButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button"
        android:text="Normal"
        android:textSize="40dp" />

    <Button
        android:id="@+id/customButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/advancedButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="99dp"
        android:background="@drawable/button"
        android:text="Personalizado"
        android:textSize="40dp" />

    <Button
        android:id="@+id/advancedButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/customButton"
        android:layout_alignLeft="@+id/normalButton"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button"
        android:text="Experto"
        android:textSize="40dp" />
    
</RelativeLayout>
