<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Principal" 
    android:background="@drawable/portada"
    >

    <Button
        android:id="@+id/infoMakersButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/salir"
        android:layout_alignLeft="@+id/helpButton"
        android:layout_marginBottom="29dp"
        android:textSize="30dp"
        android:background="@drawable/button"
        android:text="Desarrolladores" />

    <Button
        android:id="@+id/rankingButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/infoMakersButton"
        android:layout_alignLeft="@+id/infoMakersButton"
        android:layout_marginBottom="33dp"
        android:textSize="40dp"
        android:background="@drawable/button"
        android:text="Ranking" />

    <Button
        android:id="@+id/salir"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/infoMakersButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:textSize="40dp"
        android:background="@drawable/button"
        android:text="Salir" />

    <Button
        android:id="@+id/NewGame"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/helpButton"
        android:layout_alignLeft="@+id/helpButton"
        android:layout_marginBottom="28dp"
        android:textSize="40dp"
        android:background="@drawable/button"
        android:text="Iniciar Juego" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/rankingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:textSize="40dp"
        android:background="@drawable/button"
        android:text="Instrucciones" />

</RelativeLayout>